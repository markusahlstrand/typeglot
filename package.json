{
  "name": "typeglot",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "description": "Developer-first, Git-native internationalization (i18n) toolchain",
  "author": "TypeGlot Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/typeglot/typeglot"
  },
  "engines": {
    "node": ">=20.17.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "lint": "pnpm -r run lint",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "typecheck": "pnpm -r run typecheck",
    "core": "pnpm --filter @typeglot/core",
    "compiler": "pnpm --filter @typeglot/compiler",
    "cli": "pnpm --filter @typeglot/cli",
    "ui": "pnpm --filter @typeglot/ui",
    "vscode": "pnpm --filter typeglot-vscode",
    "docs": "pnpm --filter @typeglot/docs dev",
    "docs:build": "pnpm --filter @typeglot/docs build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}

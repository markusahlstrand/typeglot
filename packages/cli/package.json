{
  "name": "@typeglot/cli",
  "version": "0.2.0",
  "description": "TypeGlot CLI - command-line interface for i18n management",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "typeglot": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "ui-dist"
  ],
  "scripts": {
    "build": "tsc && pnpm run build:ui",
    "build:ui": "rm -rf ./ui-dist && cp -r ../ui/dist ./ui-dist 2>/dev/null || echo 'UI not built, skipping copy'",
    "dev": "tsc --watch",
    "start": "cd ../.. && node packages/cli/dist/cli.js dev",
    "lint": "eslint src",
    "test": "vitest run",
    "clean": "rm -rf dist ui-dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@typeglot/compiler": "workspace:^",
    "@typeglot/core": "workspace:^",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "hono": "^4.11.4",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "cli",
    "typescript"
  ],
  "license": "MIT"
}

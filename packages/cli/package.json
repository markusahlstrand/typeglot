{
  "name": "@typeglot/cli",
  "version": "0.1.0",
  "description": "TypeGlot CLI - command-line interface for i18n management",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "typeglot": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@typeglot/core": "workspace:*",
    "@typeglot/compiler": "workspace:*",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "cli",
    "typescript"
  ],
  "license": "MIT"
}

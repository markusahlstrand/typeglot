{
  "name": "@typeglot/core",
  "version": "0.2.0",
  "description": "Core logic for TypeGlot - config parsing, AST analysis, and AI prompting",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "glob": "^13.0.0",
    "ts-morph": "^27.0.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "vitest": "^4.0.17"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "typescript",
    "ast",
    "jsdoc"
  ],
  "license": "MIT"
}

{
  "name": "@typeglot/compiler",
  "version": "0.1.0",
  "description": "TypeGlot compiler - generates TypeScript functions from JSON translation files",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@typeglot/core": "workspace:*",
    "chokidar": "^3.5.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "typescript",
    "compiler",
    "codegen"
  ],
  "license": "MIT"
}

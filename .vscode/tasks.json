{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build VS Code Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "typeglot-vscode", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Watch VS Code Extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["--filter", "typeglot-vscode", "watch"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^\\[watch\\] build finished",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\[watch\\] build started",
          "endsPattern": "^\\[watch\\] build finished"
        }
      }
    },
    {
      "label": "Build All Packages",
      "type": "shell",
      "command": "pnpm",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
